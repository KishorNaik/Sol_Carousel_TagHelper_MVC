        <div class="carousel-inner">

            @for(int counter=0;counter<=Model.Count - 1; counter++)
            {
                <div class="@((counter==0) ? "carousel-item active" : "carousel-item")">
                    <img src="@Model[counter]" class="d-block w-100" style="height:400px">
